@using Managing_Teacher_Work.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
    var listWork = (List<Work>)ViewBag.listWork;
}

<style>
    .button-delete {
        color: white;
    }
</style>
<div class="row">
    <div>
        <label id="lblresult"></label>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Danh sách các khoa<small></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Tuỳ chọn 1</a>
                            </li>
                            <li>
                                <a href="#">Tuỳ Chọn 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div style="text-align:right">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal" onclick="Them()"><i class="fa fa-plus-square"></i>&nbsp;Thêm mới</button>
                </div>
                <table id="datatable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="display:none;">Mã</th>
                            <th>Tên công việc</th>
                            <th>Mô tả</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Ghi chú</th>
                            <th>Thao tác</th>

                        </tr>
                    </thead>


                    <tbody>
                        @if (listWork != null)
                        {

                            foreach (var item in listWork)
                            {


                                <tr id="row_@item.ID">
                                    <td style="display:none">@item.ID </td>
                                    <td><a href="#!" onclick="Sua(this)" data-toggle="modal" data-target="#myModal">@(item.Name_Work ?? "")</a></td>
                                    <td>@(item.Description_Work ?? "")</td>
                                  
                                    @if (item.DateWorkStart != null)
                                    {
                                        <td>@item.DateWorkStart.Value.ToString("dd/MM/yyyy")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    @if (item.DateWorkEnd != null)
                                    {
                                        <td>@item.DateWorkEnd.Value.ToString("dd/MM/yyyy")</td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }
                                    <td>@(item.Note??"")</td>




                                    <td>

                                        <a href="#" class="btn btn-info btn-xs" onclick="Sua(this)" data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil"></i> Sửa </a>
                                        <button href="#" class="btn btn-danger btn-xs" style="color:white;">
                                            <i class="fa fa-trash-o"></i>
                                            @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID },
                                            new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                                OnComplete = "$('row_" + @item.ID + "').remove()",
                                                HttpMethod = "Delete"
                                            }, new { @class = "button-delete" })
                                        </button>

                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

@Html.Partial("_WorkModal")
<script>
        function Them() {
            SetNull();
            $("#bt_sua").hide();
            $("#bt_them").show();
        };
        function SetNull() {
            $("#Name").val('');
        };
        function Xoa(el) {
            var id = el.parentNode.parentNode.cells[0].textContent;
            $.ajax({
                url: '/Szzzz/delList/?id=' + id,
                type: 'POST',
                dataType: 'json',
                success: function () {
                    alert("Xóa thành công");
                    window.location.reload();
                },
                error: function () {
                    alert("Xóa thất bại");
                    window.location.reload();
                }
            });
        }
        function Sua(el) {
            event.preventDefault();
            $("#bt_sua").show();
            $("#bt_them").hide();
            var id = el.parentNode.parentNode.cells[0].textContent;
            $.ajax({
                url: '/Work/getList/?id=' + id,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var json = JSON.parse(data);
                    $("#ID").val(json.ID);
                    $("#Name_Work").val(json.Name_Work);
                    $("#Description_Work").val(json.Description_Work);
                    CKEDITOR.instances['Description_Work'].setData(json.Description_Work);
                    $("#DateWorkStart").val(json.DateWorkStart);
                    $("#DateWorkEnd").val(json.DateWorkEnd);
                    $("#Note").val(json.Note);
                    CKEDITOR.instances['Note'].setData(json.Note);
                    $("#Status").val(json.Status);
                   


                },
                error: function (err) {
                    alert("Error: " + err.responseText);
                }
            });
        }
</script>

